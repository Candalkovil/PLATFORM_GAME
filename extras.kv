
<ExtrasWidget>:
    Button:
        text: root.parent.music_txt
        font_size: dp(12)
        size_hint: .1, .06
        pos: 0, root.height * 0.64 + self.height
        on_press: root.parent.on_music_button_press()
        background_normal: ''
        background_down: root.parent.music_img
        background_color: 1, .3, .4, 0.85
    
    Button:
        text: root.parent.vfx_text
        font_size: dp(15)
        size_hint: .1, .06
        pos: 0, root.height * 0.715 + self.height
        on_press: root.parent.on_vfx_button_press()
        background_normal: ''
        background_color: 1, .3, .4, 0.85